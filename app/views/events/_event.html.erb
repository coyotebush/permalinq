<%= content_tag :div, :class => ['event', ('future' if event.future?)] do %>

  <h3><%= link_to event.name, event %></h3>

  <div class="info">
    <div class="date"><%= l event.date, :format => :long %></div>
    <div><%= event.location %></div>
  </div>


  <ul class="photos thumbnails">
    <% 3.times do %>
      <li class="span4">
        <img src="http://lorempixel.com/240/180/nature" class="img-rounded">
      </li>
    <% end %>
  </ul>
<% end %>
