<% content_for :title, @project.name %>

<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @project.name %></h1>
</div>

<p>
  <%= @project.description %>
</p>

<p>
  <%= link_to new_event_path(:project => @project.id), :class => 'btn btn-primary' do %>
    <span class="icon-plus"></span>
    New event
  <% end %>
  <%= link_to 'Edit project', edit_project_path(@project), :class => 'btn'%>
</p>

<%= render :partial => "events/event", :collection => @events %>
